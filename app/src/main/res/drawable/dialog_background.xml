<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item>
        <shape android:shape="rectangle"> <!-- this shape is used as shadow -->
            <padding android:bottom="1dp"
                android:left="1dp"
                android:right="1dp"
                android:top="1dp"/>
            <solid android:color="#2a949494"/>
            <corners android:radius="5dp"/>
        </shape>
    </item>

    <item>
        <shape android:shape="rectangle"> <!-- this is for dialog frame -->
            <corners android:radius="5dp"/>
            <stroke android:color="@color/Zylo_stroke_color" android:width="0.5dp" />
            <solid android:color="@color/Zylo_backcolor"/></shape>
    </item>
</layer-list>